[upload_system_document]
method = "post"
elementFilters.trim = "StringTrim"
elementFilters.tags = "StripTags"

elements.description.type = "text"
elements.description.options.label = "Comments"
elements.description.options.required = true
displayGroups.upload.elements.description = "description"

;elements.nickname.type = "text"
;elements.nickname.options.label = "Source Nickname"
;elements.nickname.options.validators.alnum.validator = "NotEmpty"
;elements.nickname.options.required = true
;displayGroups.upload.elements.nickname = "nickname"

elements.uploadButton.type = "Form_Button_Submit"
elements.uploadButton.options.label = "Upload"
displayGroups.source.elements.uploadButton = "uploadButton"

